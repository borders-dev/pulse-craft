{
  "name": "borders-dev/craft-pulse",
  "description": "Keep a pulse on your Craft CMS websites",
  "type": "craft-plugin",
  "license": "mit",
  "support": {
    "email": "plugins@borders.dev",
    "issues": "https://github.com/borders-dev/pulse-craft.git/issues?state=open",
    "source": "https://github.com/borders-dev/pulse-craft.git",
    "docs": "https://github.com/borders-dev/pulse-craft.git",
    "rss": "https://github.com/borders-dev/pulse-craft.git/releases.atom"
  },
  "require": {
    "php": ">=8.0.2",
    "craftcms/cms": "^3.7 || ^4.0 || ^5.0"
  },
  "require-dev": {
    "craftcms/ecs": "dev-main",
    "craftcms/phpstan": "dev-main"
  },
  "autoload": {
    "psr-4": {
      "bordersdev\\craftpulse\\": "src/"
    }
  },
  "extra": {
    "handle": "pulse",
    "name": "Pulse",
    "developer": "borders-dev",
    "documentationUrl": "https://github.com/borders-dev/pulse-craft.git",
    "class": "bordersdev\\craftpulse\\Pulse"
  },
  "scripts": {
    "check-cs": "ecs check --ansi",
    "fix-cs": "ecs check --ansi --fix",
    "phpstan": "phpstan --memory-limit=1G"
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "8.0.2"
    },
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    }
  }
}
